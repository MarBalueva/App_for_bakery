<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
<variable
    name="PositionSelectedViewModel"
    type="com.example.app_for_bakery.vm_position_selected.PositionSelectedViewModel" />
        <variable
            name="addBasket"
            type="android.view.View.OnClickListener" />
        <variable
            name="edit"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/dialog_window">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="220dp"
                style="@style/card_window">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_position"
                        android:layout_width="200dp"
                        android:layout_height="160dp"
                        android:src="@drawable/img_cake_position" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/price"
                        android:textAppearance="@style/btn_add_basket" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                style="@style/card_window">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_position"
                        android:textAppearance="@style/btn_add_basket_position" />
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_conf"
                    android:onClick="@{addBasket}"
                    android:text="@string/add_to_basket"
                    android:textAppearance="@style/btn_add_basket_position"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:drawableStart="@drawable/img_basket" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="@{edit}"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_edit" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>