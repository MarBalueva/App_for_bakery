<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <androidx.cardview.widget.CardView
            android:id="@+id/ref_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="100dp">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_make_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@id/ref_profile"
            android:layout_alignParentStart="true"
            android:text="@string/title_my_orders"
            android:textAppearance="@style/title_of_page" />

        <Button
            android:id="@+id/btn_sort_orders"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/title_make_order"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/img_sort" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_my_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_below="@+id/btn_sort_orders"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:orientation="vertical" />

    </RelativeLayout>
</layout>