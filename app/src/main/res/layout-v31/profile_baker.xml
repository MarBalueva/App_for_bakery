<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="100dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img_profile" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/title_baker_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/name_bakery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_baker_profile"
                android:textAppearance="@style/title_of_page" />

            <TextView
                android:id="@+id/post_bakery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_about_baker"
                android:textAppearance="@style/waite_you" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_about_baker_2"
                android:textAppearance="@style/text_about_baker_work" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/profile_img"
            android:layout_below="@+id/title_baker_profile"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_profile_big" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/bio_baker"
            style="@style/card_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:text="@string/specialize_baker"
                android:textAppearance="@style/enter_log_pass" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_baker_achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bio_baker"
            android:layout_marginLeft="20dp"
            android:text="@string/baker_achievements"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/title_of_page" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/title_baker_achievements"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_ach_1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/img_ach_2" />
        </LinearLayout>

    </RelativeLayout>
</layout>